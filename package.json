{
  "name": "@madetech/blog",
  "description": "Made Tech Blog built with Gatsby and WordPress.com",
  "version": "1.0.0",
  "author": "Made Tech <hello@madetech.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "gatsby build",
    "deploy": "touch public/x-made-release-${BUILD_ID}.html && node bin/deploy.js",
    "dev": "gatsby develop",
    "format": "prettier --write \"{src,test}/**/*.js\"",
    "start": "gatsby serve",
    "smoke:local": "wait-on http://localhost:9000/blog && SMOKE_ONLY=yes SMOKE_URL=http://localhost:9000 npm test",
    "smoke:build": "wait-on ${SMOKE_URL}/x-made-release-${BUILD_ID}.html && SMOKE_ONLY=yes npm test",
    "test": "jest"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^13.1.0",
    "@madetech/frontend": "^4.14.0",
    "disqus-react": "^1.0.5",
    "dotenv": "^6.1.0",
    "gatsby": "^2.5.3",
    "gatsby-plugin-feed": "^2.0.11",
    "gatsby-plugin-manifest": "^2.0.9",
    "gatsby-plugin-react-helmet": "^3.0.12",
    "gatsby-plugin-sass": "^2.0.11",
    "gatsby-source-contentful": "^2.0.59",
    "gatsby-source-wordpress": "^3.0.61",
    "node-sass": "^4.12.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-jest": "^24.8.0",
    "babel-preset-gatsby": "^0.1.11",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "jest": "^24.8.0",
    "jest-enzyme": "^7.0.2",
    "prettier": "^1.15.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "tar": "^4.4.8",
    "wait-on": "^3.2.0"
  }
}
